{
  "version": 2,
  "env": {
    "BOT_TOKEN": "your_bot_token"
  },
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "crons": [
    {
      "path": "/api/daily.js",
      "schedule": "* * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/index",
      "dest": "/api/index.js"
    }
  ]
}